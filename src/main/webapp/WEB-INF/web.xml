<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Departments</display-name>
  <welcome-file-list>
    <welcome-file>mainPage</welcome-file>
  </welcome-file-list>

  <servlet>
    <description>Show Info for main page</description>
    <servlet-name>EmployeeServlet</servlet-name>
    <servlet-class>com.aimprosoft.task_1.controller.EmployeeServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>EmployeeServlet</servlet-name>
    <url-pattern>/mainPage</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/task_1</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
